{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* ✅ Alias pour import propre avec @ */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },

  /* ✅ Inclut uniquement ton code source */
  "include": ["src"],

  /* ✅ Référence au projet Node corrigée */
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
